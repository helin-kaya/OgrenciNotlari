@using OgrenciNotlariEL.ViewModels;
@model StudentDTO
@{
    ViewData["Title"] = "AddStudent";
}

<h1>AddStudent</h1>

<div class="row">

    <div class="col-8 offset-2 offset-2">

        <form asp-controller="Home" asp-action="AddStudent" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Öğrenci Adı </label>
                <input type="text"class="form-control" asp-for="Name" />

            </div>
            <div class="form-group">
                <label>Öğrenci SoyAdı </label>
                <input type="text" class="form-control" asp-for="Surname" />

            </div>
            <div class="form-group">
                <label>Öğrenci Numarası </label>
                <input type="text" class="form-control" asp-for="StudentNumber" />

            </div>

        

            <div class="form-group">
                <button type="submit" class="btn btn-primary">KAYDET</button>
            </div>
        </form>
    </div>

</div>